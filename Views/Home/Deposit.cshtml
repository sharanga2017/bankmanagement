@model DepositViewModel
@{
    ViewData["Title"] = "Deposit";
}

<h1>Deposit</h1>


<form enctype="multipart/form-data" asp-controller="home" asp-action="deposit"
      method="post" class="mt-3">


    <div class="form-group row">
        <label asp-for="AccountTypeTo" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <select asp-for="AccountTypeTo" class="custom-select mr-sm-2"
                    asp-items="Html.GetEnumSelectList<AccountType>()">
                <option value="">Please Select</option>
            </select>
            <span asp-validation-for="AccountTypeTo" class="text-danger"></span>
        </div>
    </div>




    <div class="form-group row">
        <label asp-for="Montant" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Montant" class="form-control" placeholder="Montant">
            <span asp-validation-for="Montant" class="text-danger"></span>
        </div>
    </div>





    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Deposit </button>
            <a asp-controller="home" asp-action="MyAccounts"
               class="btn btn-primary">Cancel</a>
        </div>
    </div>


</form>


